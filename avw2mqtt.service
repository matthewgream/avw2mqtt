[Unit]
Description=Aviation Weatherto MQTT Service
Wants=network-online.target
After=network-online.target mosquitto.service
Requires=mosquitto.service

[Service]
Type=simple
ExecStart=/opt/avw2mqtt/avw2mqtt /opt/avw2mqtt/avw2mqtt.conf
TimeoutStopSec=15s
KillMode=mixed
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target
